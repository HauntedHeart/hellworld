<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/biz_plugin_weather_shenzhen_bg">

    <RelativeLayout
        android:id="@+id/title_login"
        android:layout_width="fill_parent"
        android:layout_height="45.0dp"
        android:background="#ffcd2626">

        <TextView
            android:id="@+id/title_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="登录"
            android:textColor="#ffffffff"
            android:textSize="20.0dip" />

        <ImageView
            android:id="@+id/title_back"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/base_action_bar_back_normal" />

        <ImageView
            android:layout_width="1.0dip"
            android:layout_height="40dip"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/title_back"
            android:background="#A71717"
            android:gravity="center" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/login"
        android:layout_width="fill_parent"
        android:layout_height="300.0dp"
        android:layout_below="@+id/title_login"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/t"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="" />

        <EditText
            android:id="@+id/user_name"
            android:layout_width="200dp"
            android:layout_height="40dp"


            android:layout_marginBottom="27dp"
            android:background="@drawable/contact_search_box_edittext_keyword_background"
            android:hint="用户名"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="30dp"
            android:paddingTop="8dp"
            android:singleLine="true"
            android:textColor="#ff000000"
            android:textColorHint="#ffcccccc"
            android:textSize="15dp"
            android:layout_above="@+id/user_key"
            android:layout_alignLeft="@+id/user_key"
            android:layout_alignStart="@+id/user_key" />

        <EditText
            android:id="@+id/user_key"
            android:layout_width="200dp"
            android:layout_height="40dp"


            android:background="@drawable/contact_search_box_edittext_keyword_background"
            android:hint="密码"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="30dp"
            android:paddingTop="8dp"
            android:singleLine="true"
            android:textColor="#ff000000"
            android:textColorHint="#ffcccccc"
            android:textSize="15dp"
            android:layout_marginBottom="31dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="显示密码"
            android:textSize="10dp"
            android:textColor="#fffff0"
            android:buttonTint="#fffff0"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/user_key"
            android:layout_toEndOf="@+id/user_key" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="1000dp"
        android:layout_height="200dp"

        android:layout_below="@+id/login"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/button_cancel"
            android:layout_width="100dp"
            android:layout_height="40dp"

            android:text="取消"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/button_Enter"
            android:layout_toStartOf="@+id/button_Enter" />

        <Button
            android:id="@+id/button_Enter"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginEnd="81dp"
            android:layout_marginRight="81dp"
            android:text="确定"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />




    </RelativeLayout>


</RelativeLayout><!--android:background="#ffcd2626">-->


